<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivRecentPhotoPreview"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:adjustViewBounds="true"
            android:contentDescription="Recent photo preview"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tvRecentPhotoPreviewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Feb 28, 2026"
            android:textColor="#54595D"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnSaveToCameraRoll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:text="Save to Camera Roll Again"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnDeleteRecentPhoto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="Delete Image"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>