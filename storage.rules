rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Rule for user-uploaded original images
    match /user_images/{userId}/{allPaths=**} {
      // Users can only read/write their own images
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Existing rule for profile pictures
    match /profile_pictures/{profileFileName} {
      allow write: if request.auth != null && profileFileName == request.auth.uid + '.jpg';
      allow read: if request.auth != null;
    }

    // NEW RULE for ebird_birds_export - ONLY YOU CAN ACCESS
    match /ebirdId's/{fileName} {
      // Allow read (download) only if authenticated with YOUR email
      allow read: if request.auth != null && request.auth.token.email == 'dominique.solomon21@gmail.com';

      // Optional: Allow write only for you
      allow write: if request.auth != null && request.auth.token.email == 'dominique.solomon21@gmail.com';
    }

    // Rule for user-generated collection cards
    match /bird_cards/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}